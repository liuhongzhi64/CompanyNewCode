.erys-tab__top {
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  z-index: 199;
  background: white;
}
.erys-tab__text-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.erys-tab__box {
  transition: all  .25s  ease-in;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  background: white;
}
.erys-tab__img {
  width: 60rpx;
