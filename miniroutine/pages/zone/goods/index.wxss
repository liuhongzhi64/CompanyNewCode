}
.erys-tab__text-padding {
  width: 468rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.erys-tab__footer {
  width: 140rpx;
  height: 180rpx;
}
.erys-tab__edit {
  margin-right: 16rpx;
}
.erys-tab__animation {
  transform:translateX(250rpx);
}
.erys-tab__items {
  position: relative;
}
.erys-tab__input {
  width: 160rpx;
  border: 1rpx solid #E6E6E6;
  margin-left: 4rpx;
  transition: all  .25s  ease-in;
}
.erys-tab__back-items {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.erys-tab__footer-fixed {
  width: 750rpx;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  transition: all  .25s  ease-in;
}
.erys-footer__items {
  width: 750rpx;
  height: 160rpx;
}
.erys-button__footer {
  background: #3a5cfa;
  color: white;
}
.erys-tab__footer-animation {
  transform: translateX(-750rpx);
}
.erys-home-button__loading {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.erys-home-button__loading>image {
  width: 20px;
  height: 20px;
}
.animation {
  animation: ratateLoading 1s linear infinite;
  -webkit-animation: ratateLoading 1s linear infinite;
}
@keyframes ratateLoading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
@-webkit-keyframes ratateLoading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
.__position {
  position: relative;
}
.__delta {
  width: 0;
  height: 0;
  border-top: 30rpx solid red;
  border-left: 30rpx solid red;
  border-right: 30rpx solid transparent;
  border-bottom: 30rpx solid transparent;
  border-top-left-radius: 12rpx;
}
.__title-align {
  width: 40rpx;
  font-size: 16rpx;
  transform: rotate(-45deg);
  position: absolute;
  top: 10rpx;
  left: 0;
}
